/* --- General Waybar styling (example, adjust to your theme) --- */
* {
  border: none;
  border-radius: 0;
  font-family: "MesloLGS NF", monospace; /* Your preferred Nerd Font */
  font-size: 14px; /* Adjust as needed */
  min-height: 0;
}

window#waybar {
  background-color: rgba(
    30,
    30,
    46,
    0.9
  ); /* Base background color (e.g., Catppuccin Macchiato Base) */
  color: #cdd6f4; /* Text color (e.g., Catppuccin Macchiato Text) */
  transition-property: background-color;
  transition-duration: 0.5s;
  border-radius: 10px; /* Rounded corners for the entire bar */
}

/* --- Color definitions (Catppuccin Macchiato Palette) --- */
@define-color base #1e1e2e;
@define-color mantle #181825;
@define-color crust #11111b;

@define-color text #cdd6f4;
@define-color subtext0 #a6adc8;
@define-color subtext1 #bac2de;

@define-color overlay0 #6e7080;
@define-color overlay1 #7f849c;
@define-color overlay2 #9399b2;

@define-color surface0 #313244;
@define-color surface1 #45475a;
@define-color surface2 #585b70;

@define-color rosewater #f5e0dc;
@define-color flamingo #f2cdcd;
@define-color pink #f5c2e7;
@define-color mauve #cba6f7;
@define-color red #f38ba8;
@define-color maroon #eba0ac;
@define-color peach #fab387;
@define-color yellow #f9e2af;
@define-color green #a6e3a1;
@define-color teal #94e2d5;
@define-color sky #89dceb;
@define-color sapphire #74c7ec;
@define-color blue #89b4fa;
@define-color lavender #b4befe;

/* --- Module specific styling --- */
#workspaces button {
  padding: 0 10px; /* Slightly more padding for better spacing */
  background-color: @surface0; /* Light background for default button */
  color: @subtext0; /* Default icon color */
  border-radius: 5px; /* Rounded corners for individual buttons */
  margin: 0 3px; /* Space between buttons */
  transition: all 0.3s ease-in-out; /* Smooth transitions for visual changes */
  font-size: 18px; /* Make icons larger for better visibility */
  min-width: 30px; /* Ensure buttons have a minimum width */
}

#workspaces button:hover {
  background-color: @surface1; /* Darker background on hover */
  color: @text; /* Brighter text on hover */
}

#workspaces button.active {
  background-color: @blue; /* Bright blue for active workspace */
  color: @crust; /* Dark text on blue for contrast */
  border-radius: 5px;
  box-shadow: 0 0 5px @blue; /* Subtle glow for active */
}

#workspaces button.occupied {
  background-color: @surface2; /* Darker background for occupied but not active */
  color: @text; /* Brighter text/icon for occupied */
}

#workspaces button.urgent {
  background-color: @red; /* Red for urgent (attention needed) */
  color: @text; /* White text on red */
  animation-name: blink;
  animation-duration: 0.5s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  animation-direction: alternate;
}

/* Optional: Styling for empty workspaces if you want them distinct */
#workspaces button.empty {
  background-color: @mantle; /* Slightly darker background for empty */
  color: @overlay0; /* Faded color for empty icons */
}

/* Keyframe animation for urgent workspaces */
@keyframes blink {
  to {
    background-color: @maroon;
    color: @flamingo;
  }
}

#window {
  /* NEW/MODIFIED: Style for hyprland/window */
  margin-left: 10px; /* Small gap after workspaces */
  padding: 0 10px; /* Padding for the window title text */
  background-color: @surface0; /* Consistent background */
  color: @text; /* Text color */
  border-radius: 5px; /* Rounded corners */
  font-weight: bold; /* Make the window title stand out a bit */
  /* max-width: 300px; */ /* Uncomment and adjust if you want to truncate long titles */
  /* overflow: hidden; */
  /* text-overflow: ellipsis; */
}

/* üçÖ Pomodoro Module Styling (Consolidated & Cleaned) */
#custom-pomo {
  font-family:
    "MesloLGS NF", monospace; /* Ensure this matches your Nerd Font */
  font-size: 14px; /* Adjust as needed for readability */
  padding: 0 10px; /* Padding on left and right */
  margin: 0 0px; /* No margin on left and right */
  color: @text; /* Default text color (e.g., Catppuccin Macchiato text) */
  background-color: transparent; /* Ensure background is transparent by default */
  border-radius: 5px; /* Optional: rounded corners for the module itself */
  min-width: 120px; /* Ensure enough width for the text */
  transition-property: background-color, color, border-bottom;
  transition-duration: 0.3s;
}

/* Styling for different Pomodoro states based on the 'class' output by the script */
#custom-pomo.idle {
  background-color: @mantle; /* Dark background from palette */
  color: @subtext0; /* Ensure text is readable */
  border-bottom: 2px solid @overlay0; /* Subtle border for idle */
}

#custom-pomo.paused {
  background-color: @mantle; /* Dark background from palette, same as idle for consistency */
  color: @peach; /* Use a distinct color for the text/icon to show it's paused */
  border-bottom: 2px solid @peach; /* Border matches the text color */
}

#custom-pomo.work {
  background-color: @green; /* Green for active work */
  color: @base; /* Dark text on green for contrast */
  border-bottom: 2px solid @green;
}

#custom-pomo.break {
  background-color: @blue; /* Blue for break */
  color: @base; /* Dark text on blue for contrast */
  border-bottom: 2px solid @blue;
}

#custom-pomo.finished {
  background-color: @red; /* Red for finished (briefly seen) */
  color: @text; /* White text on red */
  border-bottom: 2px solid @red;
}

/* Optional: Add a subtle border or background highlight on hover if desired */
#custom-pomo:hover {
  background-color: rgba(0, 0, 0, 0.1); /* Slight darkening on hover */
}

/* Add other modules here if you have them, e.g.: */
#clock,
#battery,
#cpu,
#memory,
#temperature,
#disk,
#network,
#pulseaudio,
#custom-media,
#custom-powermenu {
  padding: 0 10px;
  background-color: @surface0;
  color: @text;
  margin: 0 3px;
  border-radius: 5px;
}

#custom-powermenu {
  background-color: @red;
  color: @base;
}

#custom-powermenu:hover {
  background-color: @maroon;
}
