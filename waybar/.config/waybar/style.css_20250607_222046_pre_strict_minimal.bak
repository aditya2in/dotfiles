/* --- General Waybar styling (example, adjust to your theme) --- */
* {
  border: none;
  border-radius: 0;
  font-family: "MesloLGS NF", monospace; /* Your preferred Nerd Font */
  font-size: 14px; /* Adjust as needed */
  min-height: 0;
}

window#waybar {
  background-color: rgba(
    30,
    30,
    46,
    0.9
  ); /* Base background color (e.g., Catppuccin Macchiato Base) */
  color: #cdd6f4; /* Text color (e.g., Catppuccin Macchiato Text) */
  transition-property: background-color;
  transition-duration: 0.5s;
  border-radius: 10px; /* Rounded corners for the entire bar */
}

/* --- Color definitions (example, adjust to your theme) --- */
@define-color base #1e1e2e;
@define-color mantle #181825;
@define-color crust #11111b;

@define-color text #cdd6f4;
@define-color subtext0 #a6adc8;
@define-color subtext1 #bac2de;

@define-color overlay0 #6e7080;
@define-color overlay1 #7f849c;
@define-color overlay2 #9399b2;

@define-color surface0 #313244;
@define-color surface1 #45475a;
@define-color surface2 #585b70;

@define-color rosewater #f5e0dc;
@define-color flamingo #f2cdcd;
@define-color pink #f5c2e7;
@define-color mauve #cba6f7;
@define-color red #f38ba8;
@define-color maroon #eba0ac;
@define-color peach #fab387;
@define-color yellow #f9e2af;
@define-color green #a6e3a1;
@define-color teal #94e2d5;
@define-color sky #89dceb;
@define-color sapphire #74c7ec;
@define-color blue #89b4fa;
@define-color lavender #b4befe;

/* --- Module specific styling (example) --- */
#workspaces button {
  padding: 0 5px;
  background-color: transparent;
  color: @subtext0;
  border-bottom: 3px solid transparent;
}

#workspaces button.active {
  color: @lavender;
  border-bottom: 3px solid @lavender;
}

#workspaces button:hover {
  background-color: @surface0;
  color: @text;
}

#custom-pomo {
  padding: 0 10px; /* Adjust padding as needed */
  border-radius: 5px; /* Optional: rounded corners */
  min-width: 120px; /* Ensure enough width for the text */
  /* text-align: center; */
  transition-property: background-color, color, border-bottom;
  transition-duration: 0.3s;
}

/* Existing states, if you want to keep them */
#custom-pomo.idle {
  background-color: @surface0; /* A neutral color for idle state */
  color: @overlay0;
  border-bottom: 2px solid @overlay0;
}

#custom-pomo.paused {
  background-color: @peach; /* Orange/Yellow for paused */
  color: @base;
  border-bottom: 2px solid @peach;
}

#custom-pomo.finished {
  background-color: @red; /* Red for finished (briefly seen) */
  color: @text;
  border-bottom: 2px solid @red;
}

/* --- NEW: Specific states for WORK and BREAK times --- */
#custom-pomo.work-time {
  background-color: @green; /* Green for active work */
  color: @base; /* Black text on green */
  border-bottom: 2px solid @green;
}

#custom-pomo.break-time {
  background-color: @blue; /* Blue for break */
  color: @base; /* Black text on blue */
  border-bottom: 2px solid @blue;
}

/* --- NEW: Specific states for paused WORK and BREAK times --- */
#custom-pomo.work-paused {
  background-color: @peach; /* Orange/Yellow for paused WORK */
  color: @base;
  border-bottom: 2px solid @peach;
  opacity: 0.8; /* Slightly dim it to show it's paused */
}

#custom-pomo.break-paused {
  background-color: @lavender; /* Lighter blue/purple for paused BREAK */
  color: @base;
  border-bottom: 2px solid @lavender;
  opacity: 0.8; /* Slightly dim it to show it's paused */
}
/* --- END NEW --- */

/* Add other modules here if you have them, e.g.: */
#clock,
#battery,
#cpu,
#memory,
#temperature,
#disk,
#network,
#pulseaudio,
#custom-media,
#custom-powermenu {
  padding: 0 10px;
  background-color: @surface0;
  color: @text;
  margin: 0 3px;
  border-radius: 5px;
}

#custom-powermenu {
  background-color: @red;
  color: @base;
}

#custom-powermenu:hover {
  background-color: @maroon;
}
/* üçÖ Pomodoro Module Styling */
#custom-pomo {
  font-family:
    "MesloLGS NF", monospace; /* Ensure this matches your Nerd Font */
  font-size: 14px; /* Adjust as needed for readability */
  padding: 0 10px; /* Padding on left and right */
  margin: 0 0px; /* No margin on left and right */
  color: #f5e0dc; /* Default text color (e.g., Catppuccin Macchiato text) */
  background-color: transparent; /* Ensure background is transparent */
}

/* Styling for different Pomodoro states based on the 'class' output by the script */

#custom-pomo.idle {
  color: #89b4fa; /* Blue for idle state */
}

#custom-pomo.work {
  color: #a6e3a1; /* Green for work state */
  /* You can add more styles here if needed, e.g., border, font-weight */
}

#custom-pomo.break {
  color: #f9e2af; /* Yellow for break state */
}

#custom-pomo.finished {
  color: #fab387; /* Orange for finished state */
}

/* Optional: Add a subtle border or background highlight on hover if desired */
#custom-pomo:hover {
  background-color: rgba(0, 0, 0, 0.1); /* Slight darkening on hover */
}
/* Styling for Pomodoro paused state */
#custom-pomo.paused {
  color: #bdae93; /* A muted or greyish color for paused, e.g., Catppuccin Macchiato Overlay2 */
}
